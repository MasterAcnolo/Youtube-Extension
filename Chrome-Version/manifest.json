{
  "manifest_version": 3,
  "name": "[BUILD VERSION] YouTube Redirect",
  "version": "1.3",
  "description": "Permet de rediriger vers YouTube-NoCookie automatiquement",
  "permissions": ["storage", "tabs", "scripting", "contextMenus", "clipboardWrite"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "script/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["script/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "[BUILD VERSION] Youtube NoCookie",
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
