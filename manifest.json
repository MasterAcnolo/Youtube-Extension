{
    "manifest_version": 3,
    "name": "YouTube URL Modifier",
    "version": "1.0",
    "description": "Redirige automatiquement les vid√©os YouTube vers un lecteur sans cookie.",
    "permissions": ["storage", "tabs", "scripting"],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }
  